<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D8000000"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TXT_FRAGMENTOUSUARIO_TITULO"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo Usuario"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            tools:src="@tools:sample/avatars" />

        <EditText
            android:id="@+id/TXT_FRAGMENTUSUARIO_NUEVOUSUARIO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Ingrese su Nombre"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/TXT_FRAGMENTUSUARIO_APELLIDO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Ingrese su Apellido"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/TXT_FRAGMENTOUSUARIO_RUT"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Ingrese su Rut"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <EditText
            android:id="@+id/TXT_FRAGMENTOUSUARIO_CORREO"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:hint="Ingrese su Correo"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/BTN_FRAGMENTOUSUARIO_GUARDAR"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:text="Guardar"
            android:textAlignment="center" />
    </LinearLayout>
</FrameLayout>